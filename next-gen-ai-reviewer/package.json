{
  "name": "next-gen-ai-reviewer",
  "version": "1.1.0",
  "description": "Multi-provider AI-powered code reviewer GitHub Action.",
  "main": "src/main.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:integration": "jest --testPathPatterns=tests/integration",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix"
  },
  "keywords": [
    "github-action",
    "ai",
    "code-review",
    "openai",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 67,
        "functions": 79,
        "lines": 78,
        "statements": 77
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
