{
  "name": "code-sentinel-ai",
  "version": "2.0.0",
  "description": "Production-ready AI code sentinel with zero external dependencies",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c && npm run copy:templates",
    "copy:templates": "mkdir -p dist/templates && cp src/prompts/templates/*.hbs dist/templates/",
    "build:watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm test && npm run build",
    "precommit": "npm run lint && npm run typecheck",
    "prepush": "npm run validate"
  },
  "keywords": [
    "github-action",
    "ai",
    "code-review",
    "openai",
    "gpt",
    "typescript",
    "automation"
  ],
  "author": "ashsaym",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/cache": "^3.2.4",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.13.2",
    "handlebars": "^4.7.8",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rollup": "^4.9.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
